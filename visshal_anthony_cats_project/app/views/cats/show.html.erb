<h1><%= @cat.name %></h1>

<table>
  <tr>
    <th>Attribute</th>
    <th>Value</th>
  </tr>
  <% [:age, :birth_date, :color, :sex].each do |attr_name| %>
    <tr>
      <td><%= attr_name %></td>
      <td><%= @cat.send(attr_name) %></td>
    </tr>
  <% end %>
</table>
<% if current_user == @cat.owner%>
  <a href="<%= edit_cat_url(@cat) %>">Edit <%= @cat.name %></a>
<% end %>

<h2>Rental Requests</h2>
<table>
  <tr>
    <th>User</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <% @cat.rental_requests.order('start_date').each do |req| %>
    <%= render 'req_tr', req: req %>
  <% end %>
</table>

<% if !current_user.nil? && !current_user.owns_cat?(@cat)%>
  <a href="<%= new_cat_rental_request_url(cat_id: @cat.id) %>">Create New Request</a>
<% end %>

